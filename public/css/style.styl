@import 'nib'

body
	background black
canvas
	absolute top left
	width 100%
	height 100%
	display block
	user-select none
	z-index -1
#main
	absolute bottom left 50%
	width 800px
	height 100px
	margin 0 0 0 -400px
	padding 10px
	border 1px solid black
	border-bottom 0
	border-radius 8px 8px 0 0
	background rgba(100, 100, 200, .5)
	font-size 18px
